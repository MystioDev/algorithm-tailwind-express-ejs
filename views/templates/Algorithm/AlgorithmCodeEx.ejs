<code id="codelines" class="">
    <ol start="0" class="font-bold p-5 list-inside list-decimal text-white" id="codelist">
        
    </ol>
</code>
<script>
    document.getElementById("python").addEventListener("click", function () {
        SetLanguageCode(`<%= locals.pythoncontent %>`);
    });

    document.getElementById("java").addEventListener("click", function () {
        SetLanguageCode(`<%= locals.javacontent %>`);
    });

    document.getElementById("csharp").addEventListener("click", function () {
        SetLanguageCode(`<%= locals.csharpcontent %>`);
    });

    function SetLanguageCode(content) {
        let list = document.getElementById("codelist");
        list.innerHTML = '';
        let lines = content.split('\n');
        for (let i = 0; i < lines.length; i++) {
            list.innerHTML += `<li>${lines[i]}</li>`;
        }
    }
</script>
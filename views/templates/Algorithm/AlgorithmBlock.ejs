    <script>
      document.addEventListener('DOMContentLoaded', () => {
        var code = document.getElementById('codelines');
        var lines = code.textContent.split('\n');

        for (var i = 0; i < lines.length - 1; i++) {
          lines[i] = (i + 1) + ' ' + lines[i] + '<br>';
        }
        code.innerHTML = lines.join('\n');
      });
    </script>


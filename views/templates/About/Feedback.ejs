<article class=" p-3 flex flex-col justify-center items-center h-[80svh] w-auto relative">

  <img src="/images/question_icon.png" alt="Oldal szinbólum" class="mt-48 w-[86px] h-[86px]" />

  <div
    class="mt-20 text-3xl sm:text-3xl md:text-4xl lg:text-6xl 2xl:text-7xl text-white font-bold font-mono text-center">
    Kérdésed van?
  </div>

  <div class="mt-4 mb-12 text-center text-white text-opacity-50 md:text-[32px] font-bold font-mono">
    Számunkra fontos a véleményetek!
  </div>

  <section id="segitseg"
    class="relative w-full lg:w-[80%] h-[800px] gap-4 m-8 p-8 mb-20 flex items-center flex-col bg-neutral-900 bg-opacity-20 rounded-[10px] shadow border border-neutral-700 backdrop-blur-sm">
    <div class="flex flex-col sm:flex-row gap-4 w-full">
      <div
        class="h-[60px] w-full justify-start flex items-center bg-neutral-900 bg-opacity-20 rounded-[10px] border border-neutral-700 backdrop-blur-sm">
        <div class="flex items-center w-full">
          <img src="/images/question_mark_icon.png" alt="Kereső" class="w-4 h-6 ml-4 transition-all" />
          <form id="" action="" class="relative w-full h-8 ml-3 flex items-center">
            <input type="text" name="subjectInput" id="subjectInput"
              class="absolute outline-0 border-0 bg-transparent text-white text-opacity-50 text-base sm:text-xl font-bold font-mono w-full" />
            <div
              class="fake-place-holder-for-subject absolute text-left text-white text-opacity-50 text-[16px] md:text-xl font-bold font-mono w-full -z-10">
              Segítségre van szükségem!
            </div>
          </form>
          <script>
            const inputField = document.getElementById("subjectInput");
            inputField.addEventListener("keydown", () => {
              if (inputField.value.length >= 0) {
                document
                  .querySelector(".fake-place-holder-for-subject")
                  .classList.add("hidden");
              } else {
                document
                  .querySelector(".fake-place-holder-for-subject")
                  .classList.remove("hidden");
              }
            });
          </script>
        </div>
      </div>

      <div
        class="h-[60px] w-full justify-start flex items-center bg-neutral-900 bg-opacity-20 rounded-[10px] border border-neutral-700 backdrop-blur-sm">
        <div class="flex items-center">
          <img src="/images/at.svg" alt="Kereső" class="w-8 h-8 ml-4 transition-all" />
          <form id="" action="" class="relative w-full h-8 ml-3 flex items-center">
            <input type="text" name="emailInput" id="emailInput"
              class="absolute outline-0 border-0 bg-transparent text-white text-opacity-50 text-xl font-bold font-mono w-full" />
            <div
              class="fake-place-holder-for-email absolute text-left text-white text-opacity-50 text-[16px] md:text-xl font-bold font-mono w-full -z-10">
              example@email.hu
            </div>
          </form>
          <script>
            let inputFieldEmail = document.getElementById("emailInput");
            inputFieldEmail.addEventListener("keydown", () => {
              if (inputFieldEmail.value.length >= 0) {
                document
                  .querySelector(".fake-place-holder-for-email")
                  .classList.add("hidden");
              } else {
                document
                  .querySelector(".fake-place-holder-for-email")
                  .classList.remove("hidden");
              }
            });
          </script>
        </div>
      </div>
    </div>

    <div
      class="h-[100px] w-full justify-start flex bg-neutral-900 bg-opacity-20 rounded-[10px] border border-neutral-700 backdrop-blur-sm">
      <div class="flex w-full">
        <form id="" action="" class="relative w-full h-8 ml-3">
          <textarea name="descInput" id="descInput" rows="3"
            class="absolute mt-2 outline-0 border-0 bg-transparent text-white text-opacity-50 text-xl font-bold font-mono w-full resize-none"></textarea>
          <div
            class="mt-2 ml-2 fake-place-holder-for-desc absolute text-left text-white text-opacity-50 text-[16px] md:text-xl font-bold font-mono w-full -z-10">
            Túl szép lett a weboldalunk :)
          </div>
        </form>
        <img src="/images/desc_icon.png" alt="Kereső" class="w-8 h-8 mr-4 mt-2 transition-all" />
        <script>
          let inputFieldDesc = document.getElementById("descInput");
          inputFieldDesc.addEventListener("keydown", () => {
            if (inputFieldDesc.value.length >= 0) {
              document
                .querySelector(".fake-place-holder-for-desc")
                .classList.add("hidden");
            } else {
              document
                .querySelector(".fake-place-holder-for-desc")
                .classList.remove("hidden");
            }
          });
        </script>
      </div>
    </div>

    <div class="w-full flex justify-end">
      <a href=""
        class="flex justify-center items-center w-full md:w-48 h-[60px] outline-0 border-0 bg-sky-500 rounded-[10px] text-white text-2xl font-bold font-mono mt-5 md:mt-0">
        Küldés
      </a>
    </div>

  </section>
</article>
<main class="flex flex-col justify-center items-center h-[80svh]">
  <img
    src="/images/lightning.png"
    alt="Oldal szinbólum"
    class="mt-48 w-[86px] h-[86px]"
  />

  <div class="mt-12 text-8xl text-white font-bold font-mono text-center">
    Tanulni szeretnél? <br />A legjobb helyen jársz!
  </div>

  <div class="w-[670px] h-[91px] text-center">
    <span class="text-white text-opacity-50 text-[32px] font-bold font-mono"
      >Fontos tudnivalók és leírások az </span
    ><span class="text-sky-500 text-[32px] font-bold font-mono"
      >algoritmizálás</span
    ><span class="text-white text-opacity-50 text-[32px] font-bold font-mono">
      rejtelmeiről</span
    >
  </div>

  <div class="flex justify-center items-center gap-12 mt-16">
    <button
      class="flex justify-center items-center w-[173px] h-[60px] outline-0 border-0 bg-sky-500 rounded-[10px] text-white text-2xl font-bold font-mono"
    >
      Kezdés
    </button>

    <div
      class="w-[460px] h-[60px] flex justify-start items-center bg-neutral-900 bg-opacity-20 rounded-[10px] border border-neutral-700 backdrop-blur-sm"
    >
      <div class="ml-4 flex">
        <img src="/images/search_light_gray.svg" alt="Kereső" class="w-8 h-8" />
        <div class="relative w-96 h-8 ml-6">
          <input
            type="text"
            name="searchBar"
            id="searchBar"
            class="absolute outline-0 border-0 bg-transparent text-white text-opacity-50 text-2xl font-bold font-mono w-full h-8"
          />
          <div
            class="fake-place-holder absolute text-left text-white text-opacity-50 text-2xl font-bold font-mono w-full h-8 -z-10"
          >
            Lineáris keresés...
          </div>

          <script>
            const inputField = document.getElementById("searchBar");

            inputField.addEventListener("keypress", () => {
              if (inputField.value.length >= 0) {
                document
                  .querySelector(".fake-place-holder")
                  .classList.add("hidden");
              } else {
                document
                  .querySelector(".fake-place-holder")
                  .classList.remove("hidden");
              }
            });
          </script>
        </div>
      </div>
    </div>
  </div>

  <img
    src="/images/scroll_down.svg"
    alt="Görgess tovább"
    class="w-20 h-20 mt-24 animate-bounce"
  />
</main>
